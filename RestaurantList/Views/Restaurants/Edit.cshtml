<h1>Restaurant List</h1>
<hr>

<h2>Edit restaurant: @Model["restaurant"].Name</h2>

<form action="/cuisines/@Model["cuisine"].Id/restaurants/@Model["restaurant"].Id" method="post">
  <label for="newName">Name:</label>
  <input type="text" name="newName" value="@Model["restaurant"].Name">
  <button type="submit">Edit</button>
</form>

<h4><a href="/cuisines/@Model["cuisine"].Id/restaurants/@Model["restaurant"].Id">Return to previous page</a></h4>
